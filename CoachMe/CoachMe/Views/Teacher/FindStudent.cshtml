                                        <input type="text" class="form-control" id="recipient-name" placeholder="@item.LAST_NAME" readonly>
                                    </div>
                                    <div class="form-group" style="margin-left:10px">
                                        <label for="recipient-name" class="form-control-label">วิชาที่ต้องการเรียน:</label>
                                        <input type="text" class="form-control" id="recipient-name" placeholder="@item.MEMBER_ROLE.FirstOrDefault().AUTO_ID" readonly>
                                    </div>
                                    <div class="form-group" style="margin-left:10px">
                                        <label for="recipient-name" class="form-control-label">สถานที่:</label>
                                        <input type="text" class="form-control" id="recipient-name" placeholder="@item.LOCATION" readonly>
                                    </div>
                                    <div class="form-group" style="margin-left:10px">
                                        <label for="recipient-name" class="form-control-label">เบอร์ติดต่อ:</label>
                                        <input type="text" class="form-control" id="recipient-name" placeholder="@item.MOBILE" readonly>
                                    </div>
                                    <div class="form-group" style="margin-left:10px">
                                        <label for="recipient-name" class="form-control-label">อีเมลล์:</label>
                                        <input type="text" class="form-control" id="recipient-name" placeholder="@item.MEMBER_LOGON.FirstOrDefault().USER_NAME" readonly>
                                    </div>


                                </div>
                            </div>


                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Accept Student</button>
                        </div>
                    </div>
                </div>
            </div>
        }


        @foreach (var item in Model.LIST_MEMBERS)
