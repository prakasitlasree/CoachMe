                                        <label for="recipient-name" class="form-control-label">ชื่อเล่น:</label>
                                        <input type="text" class="form-control" id="recipient-name" placeholder="@item.NICKNAME" readonly>
                                    </div>
                                    <div class="form-group" style="margin-left:10px">
                                        <label for="recipient-name" class="form-control-label">รายละเอียดเพิ่มเติม:</label>
                                        <input type="text" class="form-control" id="recipient-name" placeholder="@item.ABOUT" readonly>
                                    </div>
                                    <div class="form-group" style="margin-left:10px">
                                        <label for="recipient-name" class="form-control-label">เวลาที่สะดวกเรียน:</label>
                                        <input type="text" class="form-control" id="recipient-name" placeholder="17:00:00 - 20:00:00" readonly>
