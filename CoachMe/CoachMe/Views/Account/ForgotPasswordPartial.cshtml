
@model COACHME.MODEL.CUSTOM_MODELS.ForgotPasswordModel
@{
    Layout = null;
    ViewBag.Title = "Forgot your password?";
}
<!--Start Forget password -->
<div class="m-login__forget-password" id="formOuter">
    @*m-login__forget-password">*@
    <div class="m-login__head">
        <h3 class="m-login__title">Forgotten Password ?</h3>
        <div class="m-login__desc">Enter your email to reset your password:</div>
    </div>
    @*<form class="m-login__form m-form" action="">*@


    @using (Ajax.BeginForm("ForgotPassword", "Account", null, new AjaxOptions
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "formOuter"
    }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group m-form__group">
            <input class="form-control m-input" type="text" placeholder="Email" name="email" id="m_email" autocomplete="off">
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="m-login__form-action">
            <button id="forgotpassword" type="button" value="Cancel" name="Request" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn m-login__btn--primaryr">Request</button>&nbsp;&nbsp;
            <button type="submit" value="Cancel" name="buttonType" class="btn btn-outline-focus m-btn m-btn--pill m-btn--custom m-login__btn">Cancel</button>
        </div>
    }
    @*</form>*@
</div>
<!--End Forget password -->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


}



