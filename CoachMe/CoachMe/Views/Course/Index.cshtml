@model COACHME.MODEL.CUSTOM_MODELS.CONTAINER_MODEL
@using Newtonsoft.Json
@{
    ViewBag.Title = "CoachME";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<div class="m-content">
    @if (TempData["Message"] != null)
    {
        <p style="text-align:center" class="text-success"> @TempData["Message"].ToString() </p>
    }
    <!--Begin::Section-->
    <div class="row">
        @foreach (var item in Model.LIST_COURSES)
            {
            <div class="col-xl-4">
                <div class="m-portlet m-portlet--bordered-semi m-portlet--full-height  m-portlet--rounded-force">
                    <div class="m-portlet__head m-portlet__head--fit">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-action">
                                @*<button type="button" class="btn btn-sm m-btn--pill  btn-brand">Course #@item.SEQ</button>*@
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__body">
                        <div class="m-widget19">
                            <div class="m-widget19__pic m-portlet-fit--top m-portlet-fit--sides" style="min-height: 180px">
                                @*<img src="~/Content/images/course/BlankBanner.png" alt="">*@
                                <img src="..//@Url.Content(@item.BANNER_URL ?? @"/Content/images/course/BlankBanner.png")">
                                <h3 class="m-widget19__title m--font-light">
                                    @item.NAME
                                </h3>

                            </div>
                            <div class="m-widget19__content">
                                <div class="m-widget19__header">
                                    @*<div class="m-widget19__user-img">
                                        @*<img class="m-widget19__img" src="assets/app/media/img//users/user1.jpg" alt="">*@

                                    @*</div>*@
                                    <div class="m-widget19__info">
                                        <span class="m-widget19__username">
                                            
                                            @item.UPDATED_BY
                                            @*@item.AUTO_ID*@
                                        </span><br>
                                        <span class="m-widget19__time">
                                            @item.UPDATED_DATE
                                        </span>
                                    </div>
                                    <div class="m-widget19__stats">
                                        <span class="m-widget19__number m--font-brand">
                                            <button type="button" id="@item.AUTO_ID" onclick="ShowAction(this.id, 'Edit','Course')"
                                                    class="btn m-btn--pill btn-secondary m-btn m-btn--hover-brand m-btn--custom">

                                                <i class="fa fa-user-edit"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                                <div class="m-widget19__body">
                                    @item.DESCRIPTION
                                </div>
                            </div>

                            <div class="m-widget4__item">
                                <div class="m-widget4__ext">
                                    <span class="m-widget4__title">
                                        ราคา :
                                    </span>
                                    <span class="m-widget4__number m--font-danger">@item.PRICE.ToString()฿</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (Model.LIST_COURSES.Count <= 1 && Model.MEMBER_PACKAGE == null)
        {
            <div class="col-xl-4">
                <div class="m-portlet m-portlet--bordered-semi m-portlet--full-height  m-portlet--rounded-force">
                    <div class="m-portlet__head m-portlet__head--fit">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-action">
                                <button type="button" class="btn m-btn--pill btn-primary m-btn--wide" data-toggle="modal" onclick="ShowAction(0, 'Add','Course')">เพิ่มคอร์ส</button>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__body">

                        <div class="m-widget19">
                            <div class="m-widget19__pic m-portlet-fit--top m-portlet-fit--sides" style="min-height: 180px">
                                <img src="~/Content/images/course/New_Course.jpg" alt="">
                                <h3 class="m-widget19__title m--font-light"></h3>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (Model.MEMBER_PACKAGE == null)
        {
            <div class="col-xl-4">
                <div class="m-portlet m--bg-accent m-portlet--bordered-semi m-portlet--skin-dark m-portlet--full-height ">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    ADS
                                </h3>
                            </div>
                        </div>
                        <div class="m-portlet__head-tools">
                            <ul class="m-portlet__nav">
                                <li class="m-portlet__nav-item m-dropdown m-dropdown--inline m-dropdown--arrow m-dropdown--align-right m-dropdown--align-push" m-dropdown-toggle="hover">
                                    <a href="#" class="m-portlet__nav-link m-portlet__nav-link--icon m-portlet__nav-link--icon-xl">
                                        <i class="la la-ellipsis-h m--font-light"></i>
                                    </a>
                                    @*<div class="m-dropdown__wrapper">
                                        <span class="m-dropdown__arrow m-dropdown__arrow--right m-dropdown__arrow--adjust"></span>
                                        <div class="m-dropdown__inner">
                                            <div class="m-dropdown__body">

                                            </div>
                                        </div>
                                    </div>*@
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="m-portlet__body">
                        <div class="m-widget7 m-widget7--skin-dark">
                            <div class="m-widget7__desc">
                                มีนักเรียนอีกมากมายรอคุณอยู่ อัพเกรดแพ็คเกจของคุณสิ
                            </div>
                            <div class="m-widget7__user">
                                <div class="m-widget7__user-img">
                                    <img class="m-widget7__img" src="./assets/app/media/img//users/100_3.jpg" alt="">
                                </div>
                                <div class="m-widget7__info">

                                </div>
                            </div>
                            <div class="m-widget7__button">
                                <a class="m-btn m-btn--pill btn btn-danger" href="/purchase/index">
                                    <span>
                                        <i class="fa fa-crown"></i>
                                        <span> อัพเกรด</span>
                                    </span>
                                </a>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-xl-4">
                <div class="m-portlet m-portlet--bordered-semi m-portlet--full-height  m-portlet--rounded-force">
                    <div class="m-portlet__head m-portlet__head--fit">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-action">
                                <button type="button" class="btn m-btn--pill btn-primary m-btn--wide" data-toggle="modal" onclick="ShowAction(0, 'Add','Course')">เพิ่มคอร์ส</button>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__body">

                        <div class="m-widget19">
                            <div class="m-widget19__pic m-portlet-fit--top m-portlet-fit--sides" style="min-height: 180px">
                                <img src="~/Content/images/course/New_Course.jpg" alt="">
                                <h3 class="m-widget19__title m--font-light"></h3>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!--begin::Modal-->
        <div class="modal fade" id="addcourse" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">จัดการคอร์ส</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    @using (Html.BeginForm("manage", "course", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="modal-body">
                            <div class="form-group m-form__group row">
                                <label for="message-text" class="col-2 col-form-label">รูปประกอบ</label>
                                <div class="col-10">
                                    <a id="UploadImg" href="#">
                                        <img src="~/Content/images/course/BlankBanner.png" id="imgCourse" class="img-thumbnail imgZoom"
                                             style="height:200px; width:100%;margin-bottom:15px" />
                                    </a>
                                    @Html.TextBoxFor(m => m.COURSES.AUTO_ID, new { @id = "cAUTO_ID", @name = "AUTO_ID", @class = "form-control m-input m-input--pill", @style = "display:none;" })
                                </div>
                            </div>
                            <div class="form-group m-form__group row">
                                <label for="message-text" class="col-2 col-form-label">ชื่อคอร์ส:</label>
                                <div class="col-10">
                                    @Html.TextBoxFor(m => m.COURSES.NAME, new { @id = "cNAME", @class = "form-control m-input m-input--pill" })
                                </div>
                            </div>
                            <div class="form-group m-form__group row">
                                <label for="message-text" class="col-2 col-form-label">รายละเอียด:</label>
                                <div class="col-10">
                                    @Html.TextAreaFor(m => m.COURSES.DESCRIPTION, new { @id = "cDESCRIPTION", @class = "form-control m-input m-input--pill", @rows = "4" })
                                </div>
                            </div>
                            <div class="form-group m-form__group row">
                                <label for="message-text" class="col-2 col-form-label">ราคา:</label>
                                <div class="col-10">
                                    @Html.TextBoxFor(m => m.COURSES.PRICE, new { @id = "cPRICE", type = "Number", @class = "form-control m-input m-input--pill" })
                                </div>
                            </div>
                        </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn">Save</button>
                                    <button type="button" class="btn btn-outline-focus m-btn m-btn--pill m-btn--custom  m-login__btn" data-dismiss="modal">Close</button>
                                    <input name="banner_img" type="file" id="uploadCover" style="display:none;" />
                                </div>
                    }
                </div>
            </div>
        </div>
        <!--end::Modal-->
        <!--End::Section-->
    </div>

    <script>

        function ShowAction(id, type,section) {

            if (type == "Add") {
                if(section == "Course"){
                    $('#cAUTO_ID').val(0);
                    $('#cNAME').val('');
                    $('#cDESCRIPTION').val('');
                    $('#cPRICE').val(0);
                    $("#imgCourse").attr("src", "..//Content/images/course/BlankBanner.png");
                    $('#addcourse').modal('show');
                }

            }
            else if (type == "Edit") {

                if (section == "Course") {
                    var tmpData = @Html.Raw(Json.Encode(Model.LIST_COURSES));

                    for (var i = 0; i < tmpData.length; i++) {
                        if (tmpData[i].AUTO_ID == id) {
                            $('#cAUTO_ID').val(id);
                            $('#cNAME').val(tmpData[i].NAME);
                            $('#cDESCRIPTION').val(tmpData[i].DESCRIPTION);
                            $('#cPRICE').val(tmpData[i].PRICE);
                            $("#imgCourse").attr("src","../"+ tmpData[i].BANNER_URL);
                            $('#addcourse').modal('show');
                        }
                    }
                }

            }

        }



        $("#uploadCover").change(function () { 
            UploadCover(this);
        });
        $('#UploadImg').click(function () { 
            $("#uploadCover").trigger('click');
        });
        function UploadCover(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgCourse').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

    </script>
</div>